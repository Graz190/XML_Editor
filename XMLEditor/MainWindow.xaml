<Window x:Class="XMLEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="XML Editor" Width="540" SizeToContent="Height">
    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Menü">
                    <MenuItem Header="_Suche" Name="Suche" Click="MenuItem_Click"/>
                    <MenuItem Header="_CSVTransformer" Name="CSVTransformer" Click="MenuItem_Click"/>
                    <MenuItem Header="_Einstellung" Name="Einstellung" Click="MenuItem_Click"/>
                    <MenuItem Header="_Credit" Name="Credit" Click="MenuItem_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Label  Height="40" Width="508" HorizontalContentAlignment="Center">
            <TextBlock Name="informationfield" HorizontalAlignment="Center"></TextBlock>
        </Label>
        <Frame NavigationUIVisibility="Hidden" x:Name="Main"/>
    </StackPanel>
</Window>
